/* pages/game/game.wxss */

.game-page {
  background: linear-gradient(135deg, #e3f2fd 0%, #f0f8ff 50%, #e8f5e8 100%);
  min-height: 100vh;
  padding: 20rpx;
  position: relative;
}

/* =============  游戏状态栏  ============= */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.status-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.status-value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.status-value.level {
  color: var(--primary-color);
}

.status-value.score {
  color: var(--success-color);
}

.status-value.time {
  color: var(--warning-color);
}

.status-value.time.urgent {
  color: var(--error-color);
  animation: pulse 1s infinite;
}

.pause-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.pause-btn:active {
  transform: translateY(-50%) scale(0.95);
}

.pause-icon {
  color: white;
  font-size: 28rpx;
}

/* =============  智能控制面板  ============= */
.smart-control-panel {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.smart-control-panel::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 80%;
  height: 200%;
  background: radial-gradient(ellipse, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 8s ease-in-out infinite;
}

.smart-device {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
}

.device-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-right: 20rpx;
}

.device-icon.active {
  background: rgba(255, 255, 255, 0.3);
  animation: chipPulse 2s ease-in-out infinite;
}

.chip-indicator {
  font-size: 32rpx;
}

.signal-indicator {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #4caf50;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  font-weight: 600;
}

.device-info {
  flex: 1;
}

.device-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.water-status {
  font-size: 24rpx;
  opacity: 0.9;
}

.water-status.excellent {
  color: #4caf50;
}

.water-status.good {
  color: #8bc34a;
}

.water-status.average {
  color: #ffeb3b;
}

.water-status.poor {
  color: #f44336;
}

.flush-btn {
  background: rgba(255, 255, 255, 0.9);
  color: var(--primary-color);
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.flush-btn:not(.disabled):active {
  transform: scale(0.95);
}

.flush-btn.disabled {
  opacity: 0.6;
  background: rgba(255, 255, 255, 0.5);
}

/* =============  游戏区域  ============= */
.game-area {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.home-inlet {
  text-align: center;
  margin-bottom: 20rpx;
  padding: 15rpx;
  background: linear-gradient(135deg, #ffebee 0%, #fce4ec 100%);
  border-radius: 15rpx;
  border: 3rpx solid #f44336;
}

.inlet-text {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--error-color);
  margin-bottom: 8rpx;
}

.warning-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.game-grid {
  display: grid;
  grid-template-columns: repeat(8, 1fr);
  grid-template-rows: repeat(12, 1fr);
  gap: 4rpx;
  background: var(--border-color);
  border-radius: 15rpx;
  padding: 10rpx;
  min-height: 600rpx;
  position: relative;
}

.game-block {
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  cursor: pointer;
  transition: all 0.3s ease;
  overflow: hidden;
}

.game-block:active {
  transform: scale(0.95);
}

/* 污染物方块样式 */
.block-particle {
  background: linear-gradient(135deg, var(--particle-color) 0%, #a0522d 100%);
  box-shadow: inset 0 2rpx 4rpx rgba(255,255,255,0.3), inset 0 -2rpx 4rpx rgba(0,0,0,0.3);
}

.block-microbe {
  background: linear-gradient(135deg, var(--microbe-color) 0%, #32cd32 100%);
  box-shadow: inset 0 2rpx 4rpx rgba(255,255,255,0.3), inset 0 -2rpx 4rpx rgba(0,0,0,0.3);
}

.block-chemical {
  background: linear-gradient(135deg, var(--chemical-color) 0%, #9370db 100%);
  box-shadow: inset 0 2rpx 4rpx rgba(255,255,255,0.3), inset 0 -2rpx 4rpx rgba(0,0,0,0.3);
}

.block-selected {
  border: 4rpx solid #ffd700;
  box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.6);
  transform: scale(1.1);
  z-index: 10;
}

.block-eliminating {
  animation: eliminate 0.6s ease-out forwards;
  z-index: 20;
}

.block-falling {
  animation: fall 0.5s ease-in;
}

.block-content {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.block-icon {
  font-size: 24rpx;
  text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.3);
}

.select-ring {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border: 3rpx solid #ffd700;
  border-radius: 12rpx;
  animation: selectPulse 0.8s ease-in-out infinite;
}

.eliminate-particles {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.eliminate-particles .particle {
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background: #ffd700;
  border-radius: 50%;
  animation: explode 0.6s ease-out forwards;
}

.eliminate-particles .particle:nth-child(1) { animation-delay: 0s; }
.eliminate-particles .particle:nth-child(2) { animation-delay: 0.1s; }
.eliminate-particles .particle:nth-child(3) { animation-delay: 0.2s; }
.eliminate-particles .particle:nth-child(4) { animation-delay: 0.3s; }
.eliminate-particles .particle:nth-child(5) { animation-delay: 0.4s; }

.block-type-hint {
  position: absolute;
  bottom: -25rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 18rpx;
  color: var(--text-secondary);
  background: rgba(255, 255, 255, 0.9);
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  white-space: nowrap;
}

.pollution-source {
  text-align: center;
  margin-top: 20rpx;
  padding: 15rpx;
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  border-radius: 15rpx;
  border: 3rpx solid #ff9800;
}

.source-text {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--warning-color);
  margin-bottom: 8rpx;
}

.source-types {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.source-type {
  font-size: 24rpx;
  color: var(--text-secondary);
  background: rgba(255, 152, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 15rpx;
}

/* =============  道具栏  ============= */
.powerup-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.powerup-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 15rpx;
  border-radius: 15rpx;
  position: relative;
}

.powerup-item:not(.disabled):active {
  transform: scale(0.95);
  background: var(--bg-light);
}

.powerup-item.disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.powerup-icon {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.powerup-icon.pp {
  background: linear-gradient(135deg, #795548 0%, #8d6e63 100%);
}

.powerup-icon.cto {
  background: linear-gradient(135deg, #424242 0%, #616161 100%);
}

.powerup-icon.ro {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
}

.powerup-symbol {
  color: white;
  font-size: 32rpx;
}

.powerup-count {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: var(--error-color);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
}

.powerup-count.zero {
  background: var(--text-disabled);
}

.powerup-name {
  font-size: 24rpx;
  color: var(--text-primary);
  font-weight: 600;
}

.get-more-powerups {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx;
  border: 3rpx dashed var(--border-color);
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.get-more-powerups:active {
  transform: scale(0.95);
  border-color: var(--primary-color);
}

.plus-icon {
  font-size: 32rpx;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.get-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* =============  弹窗样式  ============= */
.game-over-modal {
  max-width: 600rpx;
}

.modal-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.modal-icon.celebration {
  animation: bounce 1s ease-in-out infinite;
}

.failure-reason {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--error-color);
  margin-bottom: 20rpx;
  text-align: center;
}

.failure-desc {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  text-align: center;
  margin-bottom: 30rpx;
}

.revive-options {
  background: var(--bg-light);
  border-radius: 15rpx;
  padding: 30rpx;
  margin: 30rpx 0;
}

.revive-title {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 20rpx;
}

.revive-methods {
  display: flex;
  gap: 20rpx;
}

.revive-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 120rpx;
}

.revive-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.revive-text {
  font-size: 24rpx;
}

/* 胜利弹窗 */
.win-modal {
  max-width: 600rpx;
}

.win-message {
  display: block;
  font-size: 32rpx;
  color: var(--success-color);
  text-align: center;
  margin-bottom: 30rpx;
  font-weight: 600;
}

.win-stats {
  display: flex;
  justify-content: space-around;
  margin: 30rpx 0;
  padding: 30rpx;
  background: var(--bg-light);
  border-radius: 15rpx;
}

.win-stat {
  text-align: center;
}

.win-stat .stat-number {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.win-stat .stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.water-test-invitation {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: center;
  margin-top: 20rpx;
}

/* 暂停弹窗 */
.pause-modal {
  max-width: 500rpx;
}

.pause-message {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: center;
  margin-bottom: 30rpx;
}

.game-tips {
  background: var(--bg-light);
  border-radius: 15rpx;
  padding: 25rpx;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.tip-item {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
  line-height: 1.4;
}

/* 智能控制弹窗 */
.smart-modal {
  max-width: 650rpx;
}

.smart-features {
  margin: 30rpx 0;
}

.smart-feature {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: var(--bg-light);
  border-radius: 15rpx;
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: white;
  margin-right: 20rpx;
}

.feature-icon.water-quality {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
}

.feature-icon.filter-life {
  background: linear-gradient(135deg, #ff9800 0%, #ffb74d 100%);
}

.feature-icon.remote-control {
  background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
}

.feature-info {
  flex: 1;
}

.feature-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.feature-status {
  font-size: 24rpx;
}

.feature-status.excellent {
  color: var(--success-color);
}

.feature-status.good {
  color: #8bc34a;
}

.feature-status.average {
  color: var(--warning-color);
}

.feature-status.poor {
  color: var(--error-color);
}

.feature-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.filter-status {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.filter-item {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.quality-indicator {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-left: 15rpx;
}

.quality-indicator.excellent {
  background: var(--success-color);
}

.quality-indicator.good {
  background: #8bc34a;
}

.quality-indicator.average {
  background: var(--warning-color);
}

.quality-indicator.poor {
  background: var(--error-color);
}

.feature-action {
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.feature-action.disabled {
  background: var(--text-disabled);
}

.brand-info {
  text-align: center;
  margin-top: 30rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: white;
  border-radius: 15rpx;
}

.brand-text {
  font-size: 26rpx;
  font-weight: 600;
}

/* =============  动画效果增强  ============= */
@keyframes chipPulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(255,255,255,0.7);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 0 10rpx rgba(255,255,255,0);
  }
}

@keyframes selectPulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(0.95);
  }
}

@keyframes fall {
  0% {
    transform: translateY(-100%);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes explode {
  0% {
    transform: translate(0, 0) scale(1);
    opacity: 1;
  }
  100% {
    transform: translate(var(--random-x, 30rpx), var(--random-y, -30rpx)) scale(0);
    opacity: 0;
  }
}

.eliminate-particles .particle:nth-child(1) { --random-x: 40rpx; --random-y: -20rpx; }
.eliminate-particles .particle:nth-child(2) { --random-x: -30rpx; --random-y: -40rpx; }
.eliminate-particles .particle:nth-child(3) { --random-x: 20rpx; --random-y: 35rpx; }
.eliminate-particles .particle:nth-child(4) { --random-x: -40rpx; --random-y: 25rpx; }
.eliminate-particles .particle:nth-child(5) { --random-x: 35rpx; --random-y: -45rpx; }

/* =============  响应式适配  ============= */
@media (max-width: 400px) {
  .game-grid {
    min-height: 500rpx;
  }
  
  .powerup-icon {
    width: 70rpx;
    height: 70rpx;
  }
  
  .powerup-symbol {
    font-size: 28rpx;
  }
  
  .modal {
    margin: 30rpx;
  }
}